{
  "name": "cms",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "copy:dev": "node run.cjs dev",
    "copy:prod": "node run.cjs prod",
    "start:dev": "npm run copy:dev && vite dev",
    "start:prod": "npm run copy:prod && vite dev",
    "build:dev": "npm run copy:dev && vite build",
    "build:prod": "npm run copy:prod && vite build",
    "preview": "vite preview",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:integration": "playwright test",
    "test:unit": "vitest"
  },
  "devDependencies": {
    "@playwright/test": "1.43.1",
    "@sveltejs/adapter-static": "3.0.1",
    "@sveltejs/kit": "2.5.6",
    "@sveltejs/vite-plugin-svelte": "3.1.0",
    "@types/luxon": "3.4.2",
    "@typescript-eslint/eslint-plugin": "7.6.0",
    "@typescript-eslint/parser": "7.6.0",
    "autoprefixer": "10.4.19",
    "eslint": "9.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-svelte": "2.37.0",
    "postcss": "8.4.38",
    "svelte": "4.2.14",
    "svelte-check": "3.6.9",
    "tailwindcss": "3.4.3",
    "tslib": "2.6.2",
    "typescript": "5.4.5",
    "vite": "5.2.8",
    "vitest": "1.5.0"
  },
  "type": "module",
  "dependencies": {
    "@jaspero/modular": "1.27.0",
    "@jaspero/utils": "1.15.3",
    "@jaspero/web-components": "1.124.0",
    "deepcopy": "2.1.0",
    "dexie": "4.0.4",
    "firebase": "10.11.0",
    "grapesjs": "0.21.10",
    "grapesjs-style-gradient": "3.0.3",
    "grapesjs-component-code-editor": "1.0.20",
    "grapesjs-parser-postcss": "1.0.3",
    "luxon": "3.4.4",
    "svelte-material-icons": "3.0.5"
  }
}
